<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="here/main_template/macros/master"
    i18n:domain="plone">

<body>
  <div metal:fill-slot="main" id="synchronizerForm">
    <h1 class="documentFirstHeading">Synchronize data</h1>

    <p>Synchronize data using this form.</p>


    <div>
        <h2>Current sync status</h2>
        <div tal:content="view/getSyncStatus"></div>
    </div>
        

    <fieldset>
      <label>Synchronize</label>
      <form method="get" 
              tal:attributes="action string:${context/absolute_url}/${view/__name__}">
        <div class="field">
          <label>Server</label>
          <div><input type="text" name="server" size="80" value="http://admin:admin@devel:5050/syncer/target/synchronize_receiver"></div>
        </div>



        <div class="field">
          <p>Press this button to start synchronization</p>
          
          <input type="submit" class="context" name="form.button.Synchronize" value="Synchronize"/>
          <input type="submit" class="context" name="form.button.Status" value="Show Status"/>

        </div>
      </form>
    </fieldset>

  </div>

</body>
</html>